<div class="columns">
  <div class="column is-6">
    <%= form_for @rsvp, url: {action: "create"}, html: {class: "rsvp_form", id: "rsvp-form"} do |f| %>
      <%= label_tag :restaurant, "Restaurant", class: "label" %>
      <%= text_field_tag :restaurant, @merchant, class: "input" %>
      <%= label_tag :address, "Address", class: "label" %>
      <%= text_field_tag :address, @address, class: "input" %>
      <%= f.label :date, class: "label" %>
      <%= f.text_field :date, class: "input", id: "flatpickr-input" %>
      <%= f.label :name, "Name", class: "label" %>
      <%= f.text_field :name, class: "input" %>
      <%= f.label :phone, "Phone", class: "label" %>
      <%= f.text_field :phone, class: "input" %>
      <%= hidden_field_tag :url, @url %>
      <%= f.submit "Create", class: "button is-primary form-btn" %>
    <% end %>
  </div>
</div>